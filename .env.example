# ============================================================================
# MARKETFLOW PRO - Configuration Environnement
# ============================================================================
# IMPORTANT: Copiez ce fichier en .env et remplissez avec vos vraies valeurs
# Ne commitez JAMAIS le fichier .env !
# ============================================================================

# ----------------------------------------------------------------
# Base de Données PostgreSQL
# ----------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/marketflow

# Ou utilisez les variables séparées :
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=marketflow
DB_USERNAME=postgres
DB_PASSWORD=your_password_here

# ----------------------------------------------------------------
# Stripe (Paiements)
# ----------------------------------------------------------------
STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# ----------------------------------------------------------------
# Application
# ----------------------------------------------------------------
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:5000

# ----------------------------------------------------------------
# Email (optionnel)
# ----------------------------------------------------------------
MAIL_FROM=noreply@marketflow.com
MAIL_FROM_NAME="MarketFlow Pro"

# ----------------------------------------------------------------
# Sécurité
# ----------------------------------------------------------------
SESSION_LIFETIME=120
SESSION_DOMAIN=
SESSION_SECURE=false

# ----------------------------------------------------------------
# Uploads
# ----------------------------------------------------------------
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/public/uploads/
