# ============================================================================
# MARKETFLOW PRO - Routing Apache
# ============================================================================
# Les fichiers existants (CSS, JS, images, PHP, HTML) sont servis directement
# Tout le reste passe par router.php (routing MarketFlow)
# ============================================================================

RewriteEngine On

# Si le fichier ou dossier existe, le servir directement
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Sinon, envoyer vers router.php
RewriteRule ^ router.php [L]
